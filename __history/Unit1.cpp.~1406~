void __fastcall TForm1::SpeedButton1Click(TObject *Sender)
{
	if(i != 0){
		int type= block[i-1]->Tag / 100;
		if(type == 4 || type == 6 || type==7||type==8){
			clcounts--;
		}
		else if(type == 9){
			clcounts++;
		}

		if(i == 1){
			line->Height=0;
		}
		else if(line->Height != 1)
		{

			line->Height = abs(block[0]->Position->Y - block[i-2]->Position->Y);
		}
		delete block[i-1];
		Reset();
		i--;
	}
}
